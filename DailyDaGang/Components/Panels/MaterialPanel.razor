@inherits FeedbackComponent<int[],List<MaterialEntity>>
<Card>
    <CheckboxGroup TValue="int" Options="@Materials" @bind-value="chooseMaterials">
    </CheckboxGroup>
</Card>
@code {
    CheckboxOption<int>[] Materials;
    int[] chooseMaterials;
    List<MaterialEntity> list;
    protected override async Task OnInitializedAsync()
    {
        chooseMaterials = base.Options;
        list = await db.Queryable<MaterialEntity>().ToListAsync();
        Materials = list.Select(x => new CheckboxOption<int>()
        {
            Label = x.Name,
            Value = x.Id
        }).ToArray();
    }

    public override Task OnFeedbackOkAsync(ModalClosingEventArgs args)
    {
        var chooseList = list.Where(x => chooseMaterials.Contains(x.Id)).ToList();
        base.OkCancelRefWithResult!.OkAsync(chooseList);
        return base.OnFeedbackOkAsync(args);
    }
}